<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundNormal"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:context=".modules.editProfile.GettingUserData.SelectLanguageFragment">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/gotham_rounded"
            android:text="Your Langyuages"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gotham_rounded"
            android:text="What languages do you know?"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gotham_rounded"
            android:text="@string/language_temp"
            android:textColor="@color/black"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gotham_rounded"
            android:text="Select upto 3"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"

            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearchLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5ssp"
            android:background="@drawable/silver_et_btn"
            android:drawableStart="@drawable/gph_ic_search_black"
            android:drawablePadding="@dimen/_20sdp"
            android:hint="Search for a lnaguage"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:paddingStart="@dimen/_20sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@color/greyLitee" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLanguage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/language_layout_checkbox"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10ssp"
            android:background="@drawable/yello_bnt_round"
            android:fontFamily="@font/gotham_rounded"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:text="Save" />

</LinearLayout>