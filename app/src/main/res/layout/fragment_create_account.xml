<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.createAccount.CreateAccountFragment">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLogoSignIn"
        android:layout_width="250dp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/logo"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSignInWIth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signInWith"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/gotham_rounded"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoSignIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignInWithPhoneNumberS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/welcomeStyleBtn"
        android:text="Phone Number"
        android:textAllCaps="false"
        android:elevation="1dp"
        android:background="@drawable/round_create_account_btn"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSignInWithFaceBookS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/call_img"
        android:layout_marginEnd="190dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="@+id/btnSignInWithPhoneNumberS"
        app:layout_constraintStart_toStartOf="@+id/btnSignInWithPhoneNumberS"
        app:layout_constraintEnd_toEndOf="@+id/btnSignInWithPhoneNumberS"
        app:layout_constraintBottom_toBottomOf="@+id/btnSignInWithPhoneNumberS"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignInWithFaceBookS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/welcomeStyleBtn"
        android:text="@string/facebook"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        android:elevation="5dp"
        android:background="@drawable/facebook_sign_in_btn_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSignInWithAppleIdS"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_fb_vector"
        android:layout_marginEnd="125dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="@+id/btnSignInWithFaceBookS"
        app:layout_constraintStart_toStartOf="@+id/btnSignInWithFaceBookS"
        app:layout_constraintEnd_toEndOf="@+id/btnSignInWithFaceBookS"
        app:layout_constraintBottom_toBottomOf="@+id/btnSignInWithFaceBookS"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignInWithAppleIdS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_with_email_btn_round"
        style="@style/welcomeStyleBtn"
        android:text="@string/google"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTermsS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_gg_logo"
        android:layout_marginEnd="98dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/btnSignInWithAppleIdS"
        app:layout_constraintTop_toTopOf="@+id/btnSignInWithAppleIdS"
        app:layout_constraintStart_toStartOf="@+id/btnSignInWithAppleIdS"
        app:layout_constraintBottom_toBottomOf="@+id/btnSignInWithAppleIdS"
        />
    <TextView
        android:id="@+id/txtTermsS"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:text="@string/welcomeTerms"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        style="@style/welcomeStyle"
        android:fontFamily="@font/gotham_rounded"
        app:layout_constraintBottom_toTopOf="@+id/TS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/TS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeHelpText"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#e94057"
        android:fontFamily="@font/gotham_rounded"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>