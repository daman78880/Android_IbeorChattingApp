<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundNormal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.chatting.chatNow.ChatNowFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarChatInside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/defaultToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f7ff"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/toolBarChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imBackBtnChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back_toolbar"
                        android:layout_gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTitleChat"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_rounded"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="Chat"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgChatFilter"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/green_filter"
                        android:layout_marginEnd="@dimen/_8sdp"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <com.devlomi.record_view.RecordButton
        android:id="@+id/record_button"
        android:layout_width="@dimen/_35ssp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/recv_bg_mic"
        android:scaleType="centerInside"
        android:elevation="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        app:mic_icon="@drawable/recv_ic_mic_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.devlomi.record_view.RecordView
        android:id="@+id/record_view"
        android:layout_width="0dp"
        android:visibility="visible"
        android:layout_height="50dp"
        android:elevation="@dimen/_50sdp"
        app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
        app:slide_to_cancel_arrow_color="#000000"
        app:slide_to_cancel_text="Slide To Cancel"
        app:slide_to_cancel_bounds="8dp"
        app:slide_to_cancel_margin_right="10dp"
        app:counter_time_color="#ff0000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/record_button"
        app:layout_constraintBottom_toBottomOf="@+id/record_button"
        app:layout_constraintEnd_toStartOf="@+id/record_button"
        />
    <com.devlomi.record_view.RecordLockView
        android:visibility="gone"
        android:id="@+id/record_lock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="@dimen/_50sdp"
        app:layout_constraintBottom_toTopOf="@+id/record_button"
        app:layout_constraintStart_toStartOf="@+id/record_button"
        app:layout_constraintEnd_toEndOf="@+id/record_button"
        android:layout_marginBottom="@dimen/_50sdp" />

    <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/etMsgSendChat"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Type a message..."
    android:visibility="visible"
    android:padding="@dimen/_12sdp"
    android:textColorHint="@color/greyLitee"
    android:layout_margin="@dimen/_14sdp"
    android:paddingEnd="@dimen/_80sdp"
    android:inputType="textCapSentences"
    android:background="@drawable/round_et"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/record_button"
    app:layout_constraintBottom_toBottomOf="parent"
    />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnMsgSendChat"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/send_btn"
        android:layout_marginEnd="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="@+id/etMsgSendChat"
        app:layout_constraintBottom_toBottomOf="@+id/etMsgSendChat"
        app:layout_constraintEnd_toEndOf="@+id/etMsgSendChat"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgGif"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:src="@drawable/gif_btn"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/btnMsgSendChat"
        app:layout_constraintBottom_toBottomOf="@+id/btnMsgSendChat"
        app:layout_constraintEnd_toStartOf="@+id/btnMsgSendChat"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userShowLayoutChatingNow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarChatInside"
        app:layout_constraintBottom_toTopOf="@+id/etMsgSendChat"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/userNameShowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundNormal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgSuperRing"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/super_ring"
                android:layout_marginStart="@dimen/_14sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/txtSetUserDetailImg"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="1dp"
                android:background="@drawable/round_small_img"
                app:layout_constraintTop_toTopOf="@+id/imgSuperRing"
                app:layout_constraintBottom_toBottomOf="@+id/imgSuperRing"
                app:layout_constraintStart_toStartOf="@+id/imgSuperRing"
                app:layout_constraintEnd_toEndOf="@+id/imgSuperRing"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSetUserDetailName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="David,28"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/gotham_rounded"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgSuperRing"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyLitee"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/imgSuperRing"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChattingShowNow"
            android:layout_width="match_parent"
            android:background="@color/backgroundNormal"
            android:layout_height="0dp"
            android:visibility="visible"
            android:padding="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userNameShowLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/demoChatStartLayoutChatingNow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarChatInside"
        app:layout_constraintBottom_toTopOf="@+id/etMsgSendChat"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tempImgChattingNow"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/round_small_img"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/demoUserNameChatingNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_rounded"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/tempTimeAgoChattingNow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tempTimeAgoChattingNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_rounded"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/tempImgChattingNow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>