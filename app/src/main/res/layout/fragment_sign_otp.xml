<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7ff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.signIn.signOtp.SignOtpFragment">

    <ImageView
        android:id="@+id/imBackBtnSignOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSignOtpTitleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_code"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        style="@style/signInStyleOne"
        app:layout_constraintTop_toBottomOf="@+id/imBackBtnSignOtp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSignOtpSubTitleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signOtpLineOne"
        android:gravity="center_horizontal"
        style="@style/signInStyleOne"
        app:layout_constraintTop_toBottomOf="@+id/tvSignOtpTitleOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSignSubLineTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_otp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        style="@style/signInStyleOne"
        android:layout_marginStart="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvSignOtpSubTitleOne"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSignSubLineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:45"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        style="@style/signInStyleOne"
        android:layout_marginEnd="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSignOtpSubTitleOne"
        />
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/otp_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/signInOtpStyleOne"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvSignSubLineTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:height="40dp"
        app:width="40dp"
        android:elevation="3dp"
        app:bar_enabled="false"
        app:otp_box_background="@drawable/round_otp_sapce"
        app:bar_height="2dp"
        app:length="6"
        app:otp_text_size="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/otp_view"
        app:layout_constraintStart_toStartOf="@+id/tvSignSubLineTwo"
        app:layout_constraintEnd_toEndOf="@+id/tvSignSubLineTime"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend"
        android:gravity="center_horizontal"
        style="@style/signInStyleOne"
        android:layout_marginStart="18sp"
        app:layout_constraintTop_toBottomOf="@+id/otp_view2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOtpContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        style="@style/signInStyleOne"
        android:padding="20dp"
        android:textColor="@color/white"
        android:text="@string/continuee"
        android:background="@drawable/sign_with_email_btn_round"
        app:layout_constraintTop_toBottomOf="@+id/tvResend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>