<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.preview_chat_item.PreviewChatFragment">

    <com.giphy.sdk.ui.views.GPHMediaView
        android:id="@+id/gifViewPreviewImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        app:gphDirection="horizontal"
        app:gphSpanCount="2"
        android:visibility="gone"
        app:gphCellPadding="12dp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:gphShowCheckeredBackground="true"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgUserImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgCancelPreviewImage"
        android:layout_width="20sp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/cancel_two"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/vedioPlayerPreviewImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>