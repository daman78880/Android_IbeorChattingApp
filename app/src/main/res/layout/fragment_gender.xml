<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7ff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.gettingUserDetail.GenderFragment">
    <ImageView
        android:id="@+id/imBackBtnGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGenderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_am_a"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"

        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        style="@style/choice_select"
        app:layout_constraintTop_toBottomOf="@+id/imBackBtnGender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMaleSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:elevation="10dp"
        android:text="@string/man"
        tools:ignore="RtlSymmetry"
        android:paddingStart="30dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:background="@drawable/choice_select_one"
        style="@style/choice_select"
        app:layout_constraintTop_toBottomOf="@+id/tvGenderTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tickMarkMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_coolicon"
        android:layout_marginEnd="30dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/tvMaleSelect"
        app:layout_constraintBottom_toBottomOf="@+id/tvMaleSelect"
        app:layout_constraintEnd_toEndOf="@+id/tvMaleSelect"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWomanSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="@string/woman"
        android:elevation="10dp"
        tools:ignore="RtlSymmetry"
        android:paddingStart="30dp"
        android:textColor="@color/black"
        android:background="@drawable/choice_select_one"
        style="@style/choice_select"
        app:layout_constraintTop_toBottomOf="@+id/tvMaleSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tickMarkWomen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_coolicon"
        android:layout_marginEnd="30dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/tvWomanSelect"
        app:layout_constraintBottom_toBottomOf="@+id/tvWomanSelect"
        app:layout_constraintEnd_toEndOf="@+id/tvWomanSelect"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGenderContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        style="@style/signInStyleOne"
        android:padding="22dp"
        android:textColor="@color/white"
        android:text="@string/continuee"
        android:background="@drawable/sign_with_email_btn_round"
        app:layout_constraintTop_toBottomOf="@+id/tvWomanSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>