<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundNormal"
    android:layout_marginStart="@dimen/_14sdp"
    android:layout_marginEnd="@dimen/_14sdp"
    android:orientation="vertical">
<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/btnSelectedCountry"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_gravity="end"
    android:fontFamily="@font/gotham_rounded"
    android:gravity="center"
    android:text="Done"
    android:textColor="@color/skyBule"
    android:textSize="18sp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:textStyle="bold"
    android:layout_marginTop="@dimen/_15sdp"
    />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearchCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5ssp"
        android:background="@drawable/silver_et_btn"
        android:drawableStart="@drawable/gph_ic_search_black"
        android:drawablePadding="@dimen/_20sdp"
        android:hint="Search..."
        android:padding="@dimen/_10sdp"

        android:paddingStart="@dimen/_20sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCountrySelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        tools:listitem="@layout/country_select_layout_for_rv"
        tools:itemCount="12"
        />
</LinearLayout>