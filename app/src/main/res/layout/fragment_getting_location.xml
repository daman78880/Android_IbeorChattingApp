<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7ff"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.location.GettingLocationFragment">
    <ImageView
        android:id="@+id/imBackBtnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLocationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow_location"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        style="@style/signInStyleOne"
        app:layout_constraintTop_toBottomOf="@+id/imBackBtnLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLocatoinLineOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvLocationLineOne"
        android:gravity="center_horizontal"
        style="@style/signInStyleOne"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLocation"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_img_location"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLocatoinLineOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEnableLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:padding="22dp"
        style="@style/signInStyleOne"
        android:layout_marginTop="170dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="@string/enable_location"
        android:background="@drawable/sign_with_email_btn_round"
        app:layout_constraintTop_toBottomOf="@+id/tvLocatoinLineOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLocatinNotNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notnow"
        style="@style/signInStyleOne"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:padding="22dp"
        android:background="@drawable/sign_cancel_btn_round"
        app:layout_constraintTop_toBottomOf="@+id/btnEnableLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>