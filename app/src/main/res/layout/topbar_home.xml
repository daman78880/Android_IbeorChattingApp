<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/imUserProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotation="180"
                    android:elevation="5dp"
                    app:trackColor="@color/white"
                    app:indeterminateAnimationType="disjoint"
                    app:indicatorSize="60dp"
                    app:trackThickness="@dimen/_4sdp"
                    app:indicatorColor="@array/progress_colors"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imUserPercentage"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:elevation="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                   android:layout_marginBottom="3dp"
                    android:background="@drawable/img_rec_change"
                    app:layout_constraintStart_toStartOf="@+id/imUserProgressBar"
                    app:layout_constraintEnd_toEndOf="@+id/imUserProgressBar"
                    app:layout_constraintBottom_toBottomOf="@+id/imUserProgressBar"
                    />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtProgressPercentageTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="4dp"
                        android:elevation="20dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/gotham_rounded"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="@+id/imUserPercentage"
                        app:layout_constraintBottom_toBottomOf="@id/imUserPercentage"
                        app:layout_constraintStart_toStartOf="@+id/imUserPercentage"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/complete"
                        android:elevation="20dp"
                        android:textSize="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham_rounded"
                        android:layout_marginEnd="7dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="@+id/imUserPercentage"
                        app:layout_constraintTop_toTopOf="@+id/imUserPercentage"
                        app:layout_constraintBottom_toBottomOf="@id/imUserPercentage"
                        />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imUserImagetl"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/logo_img_round"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="11.5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@drawable/toolbar_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imUserFiltertl"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/tool_filter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

</androidx.cardview.widget.CardView>