<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".modules.chatting.ChatFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_8ssp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgHomeChat"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:clipToOutline="true"
            android:background="@drawable/round_small_img"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgShuffelChat"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgShuffelChat"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/swipe_picture"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgHomeChat"
            app:layout_constraintEnd_toStartOf="@+id/imgLikeChat"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLikeChat"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/likes"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgShuffelChat"
            app:layout_constraintEnd_toStartOf="@+id/imgChatChat"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgChatChat"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/chat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgLikeChat"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyLitee"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Matches"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_10ssp"
        android:fontFamily="@font/gotham_rounded"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/checkLikeImgChat"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:alpha="0.6"
        android:background="@drawable/round_like_people_show"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/countLikeImgChat"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:text="0"
            android:background="@drawable/round_gulabi_color"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintTop_toTopOf="@+id/checkLikeImgChat"
            app:layout_constraintStart_toStartOf="@+id/checkLikeImgChat"
            app:layout_constraintEnd_toEndOf="@+id/checkLikeImgChat"
            app:layout_constraintBottom_toBottomOf="@+id/checkLikeImgChat"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5ssp"
            android:fontFamily="@font/gotham_rounded"
            android:text="Likes"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
           app:layout_constraintTop_toBottomOf="@+id/checkLikeImgChat"
            app:layout_constraintStart_toStartOf="@+id/checkLikeImgChat"
            app:layout_constraintEnd_toEndOf="@+id/checkLikeImgChat"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLikesUserChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:itemCount="4"
            app:spanCount="5"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/liked_people_layout"
            android:layout_marginStart="@dimen/_5ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkLikeImgChat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkLikeImgChat"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyLitee"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/gotham_rounded"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5ssp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:padding="@dimen/_10sdp"
            android:id="@+id/rvChatingShowChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/chat_member_list"
            tools:itemCount="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tempSendMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgChatIconInsideRv"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/chat_icon_two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Say Hello! Tap on a match above to\nstart chatting."
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:textColor="@color/greyLitee"
            android:layout_marginTop="@dimen/_5ssp"
            app:layout_constraintTop_toBottomOf="@+id/imgChatIconInsideRv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>